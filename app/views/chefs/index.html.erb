<%=  render "Shared/page_title", title: "Chefs" %>

<% @chefs.each do |chef| %>

  <div class="row">
    
    <div class="col-md-4 col-md-offset-4">
      <section class="chef_info center">
        <%= link_to gravatar_for(chef, size:200), chef_path(chef) %>
        <h5>Chef Name: <%= chef.username %></h5>
      </section>
    </div>

  </div>
  
<% end %>

<div class="center">
  <%= will_paginate %>
</div>